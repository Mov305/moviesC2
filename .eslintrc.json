{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "linebreak-style": 0,
    "import/extensions": [ 1, {
      "js": "always", "json": "always"
    }],
    "consistent-return":"off",
    "no-console":"off",
    "no-trailing-spaces":"off",
    "no-undef":"off",
    "prefer-template":"off",
    "camelcase":"off",
    "class-methods-use-this":"off",
    "no-nested-ternary":"off",
    "import/no-cycle":"off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
